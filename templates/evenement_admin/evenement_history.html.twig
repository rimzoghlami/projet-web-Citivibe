{% extends 'base.html.twig' %}

{% block body %}
    <!-- En-tête de la page -->
    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center">
            <a href="{{ path('app_transports') }}" class="logo d-flex align-items-center me-auto">
                <h1 class="">Cityvibe</h1>
            </a>
        </div>
    </header>

    <!-- Contenu principal de la page -->
 <main class="main">
        <div class="container">
            <h1>Historique des événements</h1>
            <div class="row">
                {% for evenement in evenementsExpire %}
                    <div class="col-md-6">
                        <div class="card mb-3" style="max-width: 540px; border-radius: 30px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="{{ asset(evenement.photo) }}" alt="Photo de l'événement" class="img-fluid rounded-start" style="height: 100%;">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ evenement.nome }}</h5>
                                        <p class="card-text">Page: {{ evenement.pageRelation.nom }}</p>
                                        <p class="card-text"><b>Description: </b>{{ evenement.description }}</p>
                                        <p class="card-text"><b>Date:</b> {{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</p>
                                        <p class="card-text"><b>Heure: </b>{{ evenement.heure ? evenement.heure|date('H:i:s') : '' }}</p>
                                        <p class="card-text"><b>Catégorie:</b> {{ evenement.categoriee }}</p>
                                        <p class="card-text"><b>Places disponibles:</b> {{ evenement.nbrplaces }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
    <footer id="footer" class="footer position-relative">
        <div class="container footer-top">
            <div class="row gy-4">
                <!-- Footer content -->
            </div>
        </div>

        <!-- Footer credits -->
    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="{{ asset('assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/php-email-form/validate.js') }}"></script>
    <script src="{{ asset('assets/vendor/aos/aos.js') }}"></script>
    <script src="{{ asset('assets/vendor/glightbox/js/glightbox.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/purecounter/purecounter_vanilla.js') }}"></script>
    <script src="{{ asset('assets/vendor/swiper/swiper-bundle.min.js') }}"></script>

   
{% endblock %}