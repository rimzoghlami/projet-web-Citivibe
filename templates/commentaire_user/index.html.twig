{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <h1>Commentaires</h1>
   <table class="table">
    {% for commentaire in commentaires %}
        <thead>
            <tr>
                
                <th>{{ commentaire.usertRelation.nom }}  {{commentaire.usertRelation.prenom}} {{ commentaire.datecreation ? commentaire.datecreation|date('Y-m-d H:i:s') : '' }}</th>
             <p class="card-text"></p>

            </tr>
        </thead>
       <tbody>
    {% if commentaire %}
        <tr>
            <td>
                <div style="border-radius: 10px; border: 1px solid #ccc; padding: 10px;">
                    {{ commentaire.contenu }}
                </div>
            </td>
            <td>
                <a href="{{ path('app_commentaire_show_user', {'idc': commentaire.idc}) }}">show</a>
                            <a href="{{ path('app_commentaire_edit_user', {'idc': commentaire.idc, 'ide': commentaire.evenementRelation.ide}) }}">Ã‰diter</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Voulez-vous ajouter un nouveau commentaire ?</td>
        </tr>
    {% endif %}
</tbody>

    {% endfor %}
    </table>

{% endblock %}
